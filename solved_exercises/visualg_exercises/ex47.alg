algoritmo "ex47"

var
  x,y: Inteiro
Procedimento Sum(var a, b: Inteiro)
inicio
   a <- a + 1
   b <- b + 2
   Escreval("The value of A = ", a)
   Escreval("The value of B = ", b)
   Escreval("Sum A + B = ",a+b)
FimProcedimento
inicio
    x <- 4
    y <- 8
    Sum(x, y)
    Escreval("Value of X = ", x)
    Escreval("Value of Y = ", y)
    
fimalgoritmo
